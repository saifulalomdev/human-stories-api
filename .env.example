# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Options: development, production, test
NODE_ENV=development
PORT=5000

# Security & Authentication (JWT)
JWT_ACCESS_SECRET=your_super_secret_access_key
JWT_REFRESH_SECRET=your_super_secret_refresh_key
JWT_PASSWORD_RESET_SECRET=your_super_secret_reset_key

# JWT Expiration (e.g., 15m, 7d, 1h)
JWT_ACCESS_SECRET_EXPIRES_IN=15m
JWT_REFRESH_SECRET_EXPIRES_IN=7d
JWT_PASSWORD_RESET_SECRET_EXPIRES_IN=1h

# Mail Configuration (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
MAIL_FROM=noreply@humanstories.com