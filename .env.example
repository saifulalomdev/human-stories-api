# ==========================================
# Environment Configuration
# ==========================================
# Options: development, production, test
NODE_ENV=development
PORT=5000

# ==========================================
# Database Connection
# ==========================================
# For local: postgresql://username:password@localhost:5432/database_name
# For Neon/Vercel: postgresql://user:password@hostname/neondb?sslmode=require
DATABASE_URL=

# ==========================================
# Authentication (JWT Secrets)
# ==========================================
# Generate strong random strings for these
JWT_ACCESS_SECRET=your_super_secret_access_key
JWT_REFRESH_SECRET=your_super_secret_refresh_key

# Token Expiration Settings
JWT_ACCESS_SECRET_EXPIRES_IN=15m
JWT_REFRESH_SECRET_EXPIRES_IN=7d

# ==========================================
# SMTP Configuration (Email)
# ==========================================
# Default for Gmail is smtp.gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# Set to 'true' for port 465, 'false' for 587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
# Use a 16-character Google App Password
SMTP_PASS=
MAIL_FROM="Human Stories <noreply@humanstories.com>"